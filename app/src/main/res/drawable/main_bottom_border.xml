<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="#a1196a"/>
        </shape>
    </item>
    <!-- 主体背景颜色值  在item中的top与bottom各指定了1dp的边框线-->
    <item
        android:top="1dp"
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp">
        <shape>
            <solid android:color="#f5f6f7"/>
        </shape>
        //可以加padding属性，是该组件内容距该组件边框的填充区域
        <!--<padding-->
